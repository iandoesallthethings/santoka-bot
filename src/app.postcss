/* Write your global styles here, in PostCSS syntax */
@tailwind base;

@layer base {
	h1 {
		@apply text-2xl text-center;
	}

	h2 {
		@apply text-xl;
	}

	h3 {
		@apply text-lg;
	}

	h1,
	h2,
	h3 {
		@apply font-bold my-2;
	}

	li {
		@apply list-disc ml-4;
	}
	a {
		@apply text-blue-600 underline;
	}

	code {
		@apply block bg-gray-100 rounded-md px-4 py-2;
	}
}

@tailwind components;
@tailwind utilities;
